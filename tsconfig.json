{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true, 
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
  }
}
